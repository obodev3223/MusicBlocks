// MARK: - Medal Models
struct MedalCategory {
    let type: MedalType
    let medals: [MedalInfo]
    
    var title: String {
        switch type {
        case .notesHit:
            return "Precisi√≥n Musical"
        case .playTime:
            return "Dedicaci√≥n"
        case .streaks:
            return "Racha"
        case .perfectTuning:
