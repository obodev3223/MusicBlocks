        }
    }
}

enum MedalType: String {
    case notesHit = "notes_hit"
    case playTime = "play_time"
    case streaks = "streaks"
    case perfectTuning = "perfect_tuning"
}

extension MedalType: CaseIterable {
    var icon: String {
        switch self {
        case .notesHit:
            return "üéµ"
        case .playTime:
            return "‚è±"
        case .streaks:
            return "üî•"
        case .perfectTuning:
            return "‚≠êÔ∏è"
        }
    }
    
    var title: String {
        switch self {
        case .notesHit:
            return "Precisi√≥n Musical"
        case .playTime:
            return "Dedicaci√≥n"
        case .streaks:
            return "Racha"
        case .perfectTuning:
            return "Afinaci√≥n"
        }
    }
    
    var shortTitle: String {
        switch self {
        case .notesHit:
            return "Precisi√≥n"
        case .playTime:
            return "Tiempo"
        case .streaks:
            return "Rachas"
