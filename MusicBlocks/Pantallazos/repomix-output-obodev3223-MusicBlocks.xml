157:                 let unlockedStates = progressDict[category.type.rawValue] ?? Array(repeating: false, count: category.medals.count)
158:                 let updatedMedals = zip(category.medals, unlockedStates).map { medal, isUnlocked in
159:                     MedalInfo(
