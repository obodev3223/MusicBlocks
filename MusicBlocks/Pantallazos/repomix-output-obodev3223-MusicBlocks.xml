 59:         barGlow.addChild(barGlowShape)
 60:         barGlow.zPosition = -1
 61:         addChild(barGlow)
 62:         for mark in markings {
 63:             mark.fillColor = .darkGray
 64:             mark.strokeColor = .clear
 65:             mark.alpha = Layout.markingsAlpha
 66:             addChild(mark)
